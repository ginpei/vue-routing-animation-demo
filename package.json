{
  "private": "true",
  "scripts": {
    "build": "npm run lint -s && cp ./index.html ./routing-animation.css gh-pages/ && browserify -v -t vueify -e src/index.js -o gh-pages/out/main.js",
    "watch": "watchify -dv -t vueify -p browserify-hmr -e src/index.js -o out/main.js",
    "lint": "eslint --ext js,vue ./main.js src/**/*.vue",
    "postinstall": "mkdir out || true",
    "start": "npm run lint -s & npm run watch"
  },
  "dependencies": {
    "browserify": "^14.4.0",
    "vue": "^2.3.4",
    "vue-router": "^2.6.0",
    "vueify": "^9.4.1",
    "vuex": "^2.3.1"
  },
  "devDependencies": {
    "browserify-hmr": "^0.3.5",
    "eslint": "^4.1.1",
    "eslint-plugin-html": "^3.0.0",
    "watchify": "^3.9.0"
  }
}
